@model IEnumerable<WebDeveloper.Model.Product>
@using WebDeveloper.Helpers
@{
    ViewBag.Title = "Product";
    //ViewBag.Free = "Free!!";
}
@helper DisplayPriceRazor(double price) {
    if (price == 0.0)
    {
        <span> Free!!</span>
    }
    else
    {
        <span>  @price </span>
    }
}

@helper DisplayDateOrNull(DateTime? date)
{
if (date == null)
{
        <span> None</span>
}
else
{
        <span>  @date</span>
}
}

<h1>@ViewBag.Title</h1>

<ul>
    @foreach (var item in Model)
    {
        <li>
            <span> @item.Description</span>
            @DisplayPriceRazor(item.Price)
            <div>
                @CustomeHelper.DisplayPriceStatic(item.Price)
            </div>
            <div>
                @Html.DisplayPriceExtension(item.Price)
            </div>


                @DisplayDateOrNull(item.CreateDate)
            <div>
                @CustomeHelper.DisplayDateOrNullStatic(item.CreateDate)
            </div>
            <div>
                @Html.DisplayDateOrNullExtension(item.CreateDate)
            </div>
        </li>
    }
</ul>

